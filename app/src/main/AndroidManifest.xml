<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yinqinghao.childprotect">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".ZonesActivity"
            android:label="Alert Zones"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".AddZoneActivity"
            android:label="Zone"
            android:parentActivityName=".ZonesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ZonesActivity" />
        </activity>

        <service
            android:name=".service.LocationService"
            android:enabled="true"
            android:exported="true" />

        <receiver android:name=".receiver.LocationAlarmReceiver" />

        <service
            android:name=".service.RouteService"
            android:enabled="true"
            android:exported="true" />

        <receiver android:name=".receiver.RouteAlarmReceiver" />

        <service android:name=".service.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".service.MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".RoutesActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".AddRouteActivity"
            android:parentActivityName=".RoutesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RoutesActivity" />
        </activity>
        <activity
            android:name=".RouteGeoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SOSActivity" />

        <receiver android:name=".receiver.ShakeReceiver">
            <intent-filter>
                <action android:name="shake.detector" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignUpActivity"
            android:parentActivityName=".LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity
            android:name=".GroupsActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".AddGroupActivity"
            android:parentActivityName=".GroupsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GroupsActivity" />
        </activity>
        <activity
            android:name=".QRActivity"
            android:parentActivityName=".GroupsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GroupsActivity" />
        </activity>
        <activity
            android:name=".ScanActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".GroupsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GroupsActivity" />
        </activity>
    </application>

</manifest>