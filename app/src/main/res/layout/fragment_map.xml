    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingRight="80dp"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        fab:menu_icon="@drawable/ic_history_24dp"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true"
        fab:menu_colorNormal="@color/buttonColor"
        fab:menu_colorPressed="@color/buttonColorDark"
        app:fab_colorNormal="@color/buttonColor"
        app:fab_colorPressed="@color/buttonColorDark"
        fab:menu_fab_label="History Route">

    </com.github.clans.fab.FloatingActionMenu>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_realtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:fab_colorNormal="@color/buttonColor"
        app:fab_colorPressed="@color/buttonColorDark"
        android:src="@drawable/ic_my_location_24dp" />

</android.support.design.widget.CoordinatorLayout>
